{
	"name": "obsidian-gamified-tasks",
	"version": "1.10.0",
	"type": "module",
	"description": "Task management with rewards system.",
	"main": "main.js",
	"scripts": {
		"dev:build": "shx rm -rf build && tsc -noEmit -skipLibCheck && node esbuild.config.mjs && shx cp manifest.json build && tailwindcss -i src/styles.css -o build/styles.css && shx cat build/main.css >> build/styles.css && shx rm build/main.css && shx touch build/.hotreload",
		"build": "shx rm -rf build && node esbuild.config.mjs production && shx cp manifest.json build && npx @tailwindcss/cli -i src/styles.css -o build/styles.css && shx cat build/main.css >> build/styles.css && shx rm build/main.css",
		"watch": "nodemon --ignore build/ -e ts,tsx,css --exec \"pnpm build\" ",
		"docs": "typedoc",
		"lint": "eslint .",
		"test": "node --stack-trace-limit=0 --import tsx --test tests/**/*.ts",
		"test:coverage": "c8 pnpm test",
		"test:one": "node --stack-trace-limit=0 --import tsx --test",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "dromse",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@types/node": "^20.12.7",
		"@types/react": "^18.2.64",
		"@types/react-dom": "^18.2.21",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"c8": "^9.1.0",
		"eslint": "^9.36.0",
		"eslint-plugin-no-inline-styles": "^1.0.5",
		"husky": "^9.0.11",
		"moment": "^2.30.1",
		"nodemon": "^3.1.0",
		"obsidian": "latest",
		"react-test-renderer": "^18.2.0",
		"tailwindcss": "^3.4.14",
		"tslib": "2.4.0",
		"tsx": "4.2.1",
		"typedoc": "^0.25.12",
		"typedoc-plugin-markdown": "^3.17.1",
		"typescript": "4.7.4",
		"typescript-eslint": "^7.7.0",
		"typescript-plugin-css-modules": "^5.1.0"
	},
	"dependencies": {
		"builtin-modules": "3.3.0",
		"esbuild": "latest",
		"esbuild-css-modules-plugin": "^3.1.0",
		"lucide-react": "^0.373.0",
		"react": "^18.2.0",
		"react-confetti-explosion": "^2.1.2",
		"react-dom": "^18.2.0",
		"shx": "^0.4.0"
	}
}
