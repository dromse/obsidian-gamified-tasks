{
	"compilerOptions": {
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"jsx": "react",
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly"
				}
			}
		],
		"baseUrl": ".",
		"paths": {
			"@*": ["src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
